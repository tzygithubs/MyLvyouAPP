<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="0.31"
                android:src="@mipmap/ic_shouye_saoyisao" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.98"
                android:background="@color/colorWhite"
                android:hint="目的地/酒店/景点/航班号" />


            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:text="搜索" />

        </RadioGroup>
        <ViewFlipper
            android:id="@+id/viewFlipper"
            android:layout_width="match_parent"
            android:layout_height="150dp">

        </ViewFlipper>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/relativeLayout5"
            >
            <Button
                android:layout_width="0dp"
                android:id="@+id/id_item_button"
                android:layout_height="80dp"
                android:gravity="center_horizontal"
                android:text="酒店"
                android:background="@color/CANDYDANDY"
                android:textSize="25sp"
                android:paddingTop="10dp"
                android:textColor="@color/colorWhite"
                android:drawableTop="@mipmap/found_jd"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                />
            <GridView
                android:id="@+id/item_gridView_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:verticalSpacing="3dp"
                android:horizontalSpacing="3dp"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/relativeLayout51"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:gravity="center_horizontal"
                android:text="机票"
                android:background="@color/skyblue"
                android:textSize="25sp"
                android:paddingTop="10dp"
                android:textColor="@color/colorWhite"
                android:drawableTop="@mipmap/found_feiji"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                />
            <GridView
                android:id="@+id/item_gridView_layout1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:verticalSpacing="3dp"
                android:horizontalSpacing="3dp"
                android:layout_weight="2"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/relativeLayout512"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:gravity="center_horizontal"
                android:text="旅游"
                android:background="@color/lawngreen"
                android:textSize="25sp"
                android:paddingTop="10dp"
                android:textColor="@color/colorWhite"
                android:drawableTop="@mipmap/found_jdwl"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                />
            <GridView
                android:id="@+id/item_gridView_layout2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:verticalSpacing="3dp"
                android:horizontalSpacing="3dp"
                android:layout_weight="2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/relativeLayout5123"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:gravity="center_horizontal"
                android:text="攻略"
                android:background="@color/orange"
                android:textSize="25sp"
                android:paddingTop="10dp"
                android:textColor="@color/colorWhite"
                android:drawableTop="@mipmap/found_qqg"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                />
            <GridView
                android:id="@+id/item_gridView_layout3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:verticalSpacing="3dp"
                android:horizontalSpacing="3dp"
                android:layout_weight="2"/>

        </LinearLayout>

        <GridView
            android:id="@+id/item_gridView_layout4"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="5dp"
            android:layout_marginTop="10dp"
            android:numColumns="4"/>

    </LinearLayout>
</ScrollView>
