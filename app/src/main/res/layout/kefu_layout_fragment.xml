<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/jb"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/dh"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"

            android:background="@mipmap/dianhua" />

        <RadioGroup
            android:layout_weight="1"
            android:id="@+id/radio_kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radiobutton_shoutiankefu"
                style="@style/KeFuRadioButton"
                android:text="@string/dingdan"
                android:textSize="29sp"/>

            <RadioButton
                android:id="@+id/radiobutton_shouhoukefu"
                style="@style/KeFuRadioButton"
                android:text="@string/zixun"
                android:textSize="29sp"/>
        </RadioGroup>

        <ImageView
            android:layout_weight="1"
            android:id="@+id/img"
            android:layout_width="0dp"
            android:layout_height="40dp"

            android:background="@mipmap/shuaxin" />

    </LinearLayout>

    <ListView
        android:id="@+id/kefu_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>



</LinearLayout>