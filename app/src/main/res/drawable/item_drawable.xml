<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 当选中的时间，设定颜色为黑色 -->
    <item android:state_checked="true" android:color="@color/orange"></item>
    <!-- 当没有选中的时间， 设定颜色为灰色-->
    <item android:state_checked="false" android:color="@color/colorWhite"></item>

</selector>